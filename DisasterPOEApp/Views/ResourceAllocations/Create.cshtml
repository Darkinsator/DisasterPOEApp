@model DisasterPOEApp.Models.ResourceAllocation

@{
    ViewBag.Title = "Create";
    // Assuming you have a ViewBag to hold dropdown data from the controller
    SelectList disasterList = ViewBag.DisasterList;
    SelectList amountAllocatedList = ViewBag.AmountAllocatedList;
    SelectList resourceList = ViewBag.ResourceList;
}

<h2>Create</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>ResourceAllocation</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(model => model.DisasterId, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.DisasterId, disasterList, "Select Disaster", new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.DisasterId, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.AmountAllocated, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.AmountAllocated, amountAllocatedList, "Select Amount Allocated", new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.AmountAllocated, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Resource, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.Resource, resourceList, "Select Resource", new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Resource, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.AllocationDate, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.AllocationDate, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.AllocationDate, "", new { @class = "text-danger" })
        </div>
    </div>

    <!-- Add dropdown for ResourceAmount, AllocationDate, etc. -->

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

